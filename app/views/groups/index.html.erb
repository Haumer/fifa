<h1>Groups</h1>
<div class="container">
  <div class="row">
    <% @groups.each do |group| %>
      <div class="group col-xs-12 col-sm-3">
        <%= link_to group_path(group) do %>
          <div class="group-header">
            <h4><%= group.name %></h4>
          </div>
        <% end %>
        <% group.teams.each do |team| %>
          <div class="team-row">
            <%= team.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "home", root_path %>
